<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2DCF6"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".Terrace">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.2"
        android:background="@drawable/custom_bg2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/terrace" />

        <TextView
            android:id="@+id/ter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TERRACE"
            android:textColor="@color/white"
            android:fontFamily="@font/indigo"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="230dp"
                android:layout_margin="15dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="#79F1EEEF"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">


                <ImageView
                    android:id="@+id/isanyo"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_sanyo"
                    android:padding="17dp"
                    android:src="@drawable/sanyo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Water Pump"
                    android:fontFamily="@font/getboregtrialonly"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/powersanyo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:text="OFF"
                    android:fontFamily="@font/getboregtrialonly"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/SwitchSanyo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:textOff="Off"
                    android:textOn="On"
                    android:textStyle="bold"
                    android:thumb="@drawable/thumb"
                    app:showText="true"
                    app:track="@drawable/track" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="230dp"
                android:layout_margin="15dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="#79F1EEEF"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">


                <ImageView
                    android:id="@+id/lampu"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_sanyo"
                    android:padding="17dp"
                    android:src="@drawable/lamp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Lamp"
                    android:fontFamily="@font/getboregtrialonly"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/powerlampteras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:text="OFF"
                    android:fontFamily="@font/getboregtrialonly"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/SwitchLampu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:textOff="Off"
                    android:textOn="On"
                    android:thumb="@drawable/thumb"
                    app:showText="true"
                    app:track="@drawable/track" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:gravity="left">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="230dp"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    app:cardBackgroundColor="#79F1EEEF"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp">


                    <ImageView
                        android:id="@+id/stopkontak"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_sanyo"
                        android:padding="17dp"
                        android:src="@drawable/stopkontak" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Electric Socket"
                        android:fontFamily="@font/getboregtrialonly"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/powerstopkontak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:text="OFF"
                        android:fontFamily="@font/getboregtrialonly"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/SwitchStopKontak"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:textColor="@color/black"
                        android:textOff="Off"
                        android:textOn="On"
                        android:textStyle="bold"
                        android:fontFamily="@font/codigra"
                        android:thumb="@drawable/thumb"
                        app:showText="true"
                        app:track="@drawable/track" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>